{
    // docker build . -t openpi0
    "image": "openpi0",
    "runArgs": [
        "--name=ynn-openpi0",
        "--net=host",
        "--ipc=host",
        "--gpus",
        "all",
        "-e",
        "NVIDIA_DRIVER_CAPABILITIES=compute,compat32,utility,video",
        "--privileged"
    ],
    "mounts": [
        "source=/home/yn35/code/open-pi-zero,target=/root/open-pi-zero,type=bind",
        "source=/home/yn35/data,target=/data,type=bind"
    ],
    "workspaceFolder": "/root/open-pi-zero",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-azuretools.vscode-docker",
                "github.copilot",
                "github.vscode-pull-request-github"
            ]
        }
    }
}